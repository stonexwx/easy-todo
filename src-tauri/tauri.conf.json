{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "productName": "easy-todo",
  "version": "0.1.0",
  "identifier": "com.easytodo.app",
  "build": {
    "beforeBuildCommand": "yarn build",
    "beforeDevCommand": "yarn dev",
    "devUrl": "http://localhost:5173",
    "frontendDist": "../dist"
  },
  "tauri": {
    "updater": {
      "active": true,
      "endpoint": "https://api.github.com/repos/easy-todo/easy-todo/releases/latest",
      "pubkey": "-----BEGIN PUBLIC KEY----------END PUBLIC KEY-----",
      "dialog": true
    }
  },
  "app": {
    "security": {
      "csp": "default-src 'self'; connect-src 'self' https://api.deepseek.com https://gitlab.com; style-src 'self' 'unsafe-inline'; script-src 'self'; img-src 'self' data:"
    },
    "windows": [
      {
        "fullscreen": false,
        "height": 700,
        "resizable": true,
        "title": "Easy Todo",
        "width": 900,
        "minWidth": 640,
        "minHeight": 480,
        "center": true
      }
    ]
  },
  "bundle": {
    "active": true,
    "category": "Productivity",
    "copyright": "",
    "externalBin": [],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "longDescription": "An AI-powered todo list that helps you manage tasks using the four-quadrant method, with GitLab integration and AI reporting.",
    "macOS": {
      "entitlements": null,
      "exceptionDomain": "",
      "frameworks": [],
      "providerShortName": null,
      "signingIdentity": null
    },
    "resources": [],
    "shortDescription": "AI-powered todo list",
    "targets": "all",
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": ""
    }
  }
}
